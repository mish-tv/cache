{

  // ---------------------------------------------------------------------------------------------------------------------------
  // editor
  // ---------------------------------------------------------------------------------------------------------------------------
  "editor.tabCompletion": "on",
  "editor.rulers": [128],
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true,
    "source.fixAll.stylelint": true
  },


  // ---------------------------------------------------------------------------------------------------------------------------
  // files
  // ---------------------------------------------------------------------------------------------------------------------------
  "files.exclude": {
    "**/node_modules": true,
    "**/.cache": true,
    "**/.vercel": true,
    "**/.next": true,
    "packages/**/lib": true,
    "projects/server/**/lib": true
  },
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/node_modules/**": true,
    "**/.cache/**": true,
    "**/.vercel/**": true,
    "**/.next/**": true
  },
  "search.followSymlinks": true,


  // ---------------------------------------------------------------------------------------------------------------------------
  // extensions
  // ---------------------------------------------------------------------------------------------------------------------------
  "eslint.validate": [
    "javascript",
    "typescript",
  ],


  // ---------------------------------------------------------------------------------------------------------------------------
  // languages
  // ---------------------------------------------------------------------------------------------------------------------------
  "typescript.tsdk": "./node_modules/typescript/lib",
  "typescript.suggest.autoImports": false,
}
